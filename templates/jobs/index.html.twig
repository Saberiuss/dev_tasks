{% extends 'base.html.twig' %}

{% block title %}Hello JobsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous"
    >
<div class="example-wrapper">
    <h1>Hello {{controller_name}}! ✅</h1>
    <br>
    <a href="{{ path('home') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Главная</a>
    <a href="{{ path('jobs') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Вакансии</a>
    <br>
    <ul>

    </ul>

    <table>
        <colgroup>
            <col span="1" style="background:Khaki">
            <col style="background-color:LightCyan">
        </colgroup>
        <tr>
            <th>Вакансия</th>
            <th>Контора</th>
            <th>ЗП</th>
        </tr>
        {% for j in jobs %}

        <tr>
            <td><a href="{{ path('job', {'jobs': j.job, }) }}">{{j.job}} </a></td>
            <td>{{j.company}}</td>
            <td>{{j.pay}}-{{j.mpay}}</td>
        </tr>
        {% endfor %}

    </table>
</div>
{% endblock %}
